

<%= form_for [question, Answer.new] do |f| %>


  <div class="field">
    <label>Create answer</label>
    <%= f.text_field :body %>
    <%= f.hidden_field :question_id ,value:question.id %>
    <%= f.hidden_field :user_id,value:current_user.id %>
  </div>

<br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
